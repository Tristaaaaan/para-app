# Main Window
<MainWindow>:
    name: "main"
    status: status

    MDBoxLayout:
        size_hint: .9, 1
        pos_hint: {'center_y': .5, 'center_x': .5}

        MDBoxLayout:
            orientation: 'vertical'
            spacing: 14
            size_hint: 1, .4
            padding: 10
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDLabel:
                text: "Category"
                font_name: 'Inter/Inter-Regular'
                color_mode: 'custom'
                line_color_focus: 0, 0, 0, 1
                line_color_normal: 0, 0, 0, 1
                font_size: '12sp'

            MDCard:
                radius: 8
                padding: [20, 0, 0, 0]
                md_bg_color: 1, 1, 1, 1

                MDLabel:
                    id: status
                    text: "Regular Commuter"
                    color_mode: 'custom'
                    font_size: '18sp'
                    font_name: 'Inter/Inter-Medium'
                    theme_text_color: 'Custom'
                    text_color: 0, 0, 0, 1
                    halign: 'left'

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 10

                MDCheckbox:
                    size_hint: None, None
                    size: dp(48), dp(48)
                    pos_hint: {'center_y': 0.5}
                    active_color: [0, 1, 0, 1]
                    theme_text_color: 'Custom'
                    on_active:
                        root.category_(*args)

                MDButton:
                    style: "filled"
                    md_bg_color: [80/255, 194/255, 201/255, 1]
                    size_hint_x: 1
                    on_release:
                        app.root.current = "second"
                        root.manager.transition.direction = "left"

                    MDButtonText:
                        text: "Proceed"
                        text_color: [1, 1, 1, 1]
                        theme_text_color: 'Custom'

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_x: .7
                pos_hint: {'center_x': .5}

                MDLabel:
                    markup: True
                    font_name: 'Inter/Inter-Light'
                    text: "Tap the checkbox to change category."
                    font_size: '10sp'
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: [0, 0, 0, 1]
