# Second Window
<SecondWindow>:
    name: "second"
    starting_place: starting_place
    destination: destination
    MDBoxLayout:
        orientation: 'vertical'
        padding: 30
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        spacing: 20
        MDLabel:
            text: "ROUTE"
            halign: "center"
            font_style: "Caption"
            bold: True
            theme_text_color: "Custom"
            text_color: [0, 0, 0, 1]
        MDLabel:
            text: "City of Imus - Indang, Cavite (Vice-Versa)"
            halign: "center"
            bold: True
            font_style: "H6"
            theme_text_color: "Custom"
            text_color: [0, 0, 0, 1]
        
        # Starting Location
        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 10
            MDIconButton:
                icon: "bus"
                pos_hint: {'center_x': 0.50}
                size_hint_x: None
                on_release:
                    root.route1()
            MDTextField:
                id: starting_place
                mode: "rectangle"
                hint_text: "Where did you ride the jeepney?"
                line_color_normal: 0, 0, 0, 1
                color_mode: 'custom'
                line_color_focus: 0, 0, 0, 1

        # Destination
        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 10
            MDIconButton
                icon: "bus-marker"
                on_release:
                    root.revroute1()
            MDTextField:
                id: destination
                hint_text: "Where are you headed?"
                mode: "rectangle"
                color_mode: 'custom'
                line_color_focus: 0, 0, 0, 1
                line_color_normal: 0, 0, 0, 1
                font_size: "15dp"

        # Number of Passenger and Minimum Fare
        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 10
            MDBoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: "No. of Passenger"
                    font_style: "Overline"
                    theme_text_color: "Custom"
                    text_color: [0, 0, 0, 1]
                MDTextField:
                    id: passenger
                    color_mode: 'custom'
                    line_color_focus: 0, 0, 0, 1
                    line_color_normal: 0, 0, 0, 1
                    halign: "center"
                    text: '9'
                    font_size: "15dp"
            MDBoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: "Minimum Fare"
                    font_style: "Overline"
                    theme_text_color: "Custom"
                    text_color: [0, 0, 0, 1]
                MDTextField:
                    id: minimum_fare
                    halign: "center"
                    color_mode: 'custom'
                    line_color_focus: 0, 0, 0, 1
                    line_color_normal: 0, 0, 0, 1
                    text: '9'
                    font_size: "15dp"
        
        # Back to Main Screen, Submit, Refresh
        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 10
            MDIconButton:
                icon: "arrow-left"
                user_font_size: "20dp"
                pos_hint: {'center_y': 0.5}
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            MDFlatButton:
                text: "SUBMIT"
                font_name: "RobotoMedium"
                font_size: "12dp"
                size_hint_x: 0.9
                pos_hint: {'center_y': 0.5}
                theme_text_color: 'Custom'
                text_color: [1, 1, 1, 1]
                md_bg_color: [20/255, 20/255, 20/255, 1]
                on_release:
                    root.validate()
            MDIconButton
                icon: "refresh"
                pos_hint: {'center_y': 0.5}
                user_font_size: "25dp"
                on_release:
                    root.refresh()
        MDLabel:
            markup: True
            text: "[b]NOTE:[/b] Swipe the screen to change route."
            font_style: "Caption"
            halign: "center"
            theme_text_color: "Custom"
            text_color: [0, 0, 0, 1]