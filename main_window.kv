# Main Window
<MainWindow>:
    name: "main"
    status: status
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.9, 0.4
        MDLabel:
            text: "Category"
            font_style: "Overline"
            bold: "True"
            color_mode: 'custom'
            line_color_focus: 0, 0, 0, 1
            line_color_normal: 0, 0, 0, 1
        MDTextField:
            id: status
            text: "Regular"
            bold: True
            disabled: True
            color_mode: 'custom'
            mode: "rectangle"
            line_color_focus: 0, 0, 0, 1
            line_color_normal: 0, 0, 0, 1
        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 10
            MDCheckbox:
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {'center_y': 0.5}
                on_active:
                    root.category_(*args)
            MDFlatButton:
                text: "PROCEED"
                font_name: "RobotoMedium"
                text_color: [1, 1, 1, 1]
                size_hint_x: 0.9
                pos_hint: {'center_y': 0.5}
                theme_text_color: 'Custom'
                md_bg_color: [20/255, 20/255, 20/255, 1]
                on_release:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
        MDLabel:
            markup: True
            text: "[b]NOTE:[/b] Tap the checkbox to change category."
            font_style: "Caption"
            halign: "center"
            theme_text_color: "Custom"
            text_color: [0, 0, 0, 1]
