# History Window
<HistoryWindow>:
    name: "history"
    listexpenses: listexpenses
    overall: overall
    MDBoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        md_bg_color:  [80/255, 194/255, 201/255, 1]

        #Button
        MDBoxLayout:
            size_hint: .95, .1
            pos_hint: {'center_x': .5, 'center_y': .5}
            MDRelativeLayout:
                pos_hint: {'center_y': .5}
                size_hint: 1, 1
                MDIconButton:
                    pos_hint: {'center_y': .5}
                    icon: 'arrow-left'
                    halign: 'right'
                    border: [20, 20, 20, 20]
                    text_color: 'white'
                    theme_text_color: 'Custom'
                    on_release: 
                                
                        app.root.current = "second"
                        root.manager.transition.direction = "right"
                MDLabel:
                    text: 'Fare History'
                    halign: 'center'
                    text_color: 'white'
                    font_name: 'Inter/Inter-Bold'
                    theme_text_color: 'Custom'

        # Inputs           
    
        MDBoxLayout:
            orientation: 'vertical' 
            size_hint: .95, .15
            pos_hint: {'center_x': .5, 'center_y': .5}
            MDLabel:
                id: overall
                size_hint_y: .6
                text_color: 'white'
                font_size: '64sp'
                font_name: 'Inter/Inter-Medium'
                theme_text_color: 'Custom'

            MDLabel:
                id: month
                pos_hint: {'center_y': .5}
                size_hint_y: .4
                halign: 'left'
                font_name: 'Inter/Inter-Regular'
                text_color: 'white'
                font_size: '14sp'
                opacity: 0.64
                theme_text_color: 'Custom'


        # List
        MDBoxLayout:
            size_hint_y: .7
            radius: 18, 18, 0, 0
            md_bg_color: 'white'
            CustomMDBoxLayout:
                padding: 0, 15, 0, 0 
                size_hint_y: 1
                ScrollView:
                    MDList:
                        id: listexpenses
                        padding: 0


<SwipeToDeleteItem>:
    size_hint_y: None
    height: content.height
    MDCardSwipeLayerBox:
        spacing: 10
        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: root.remove_item(root)
            theme_text_color: 'Custom'
            text_color: 'white'
    MDCardSwipeFrontBox:
        canvas.before:
            Color:
                rgba: [1, 1, 1, 1]  # Set the desired background color here
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [0,]  # Set the radius value to 0 to remove the rounded corners
        ListItemWithIcon:
            id: content
            text_color: 41/255, 43/255, 45/255, 1
            secondary_text_color: 145/255, 145/255, 159/255, 1
            secondary_theme_text_color: 'Custom'
            text: f"{root.text}"
            secondary_text: f"{root.secondary_text}"
            _no_ripple_effect: True
            CustomIconLeftWidget:
                canvas.before:
                    Color:
                        rgba: root.md_bg_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(10), dp(10)] 
                icon: root.icon 
                theme_icon_color: 'Custom'
                icon_color: root.icon_color
                _no_ripple_effect: True
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_x: .25
                pos_hint: {'x': .75}
                md_bg_color: 'white'
                padding: [0, 0, 20, 0]
                MDLabel:
                    pos_hint: {'center_x': .5}
                    font_name: 'Inter/Inter-Regular'
                    text:  f"{root.fareTextRight}"
                    halign: "right"
